<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">
    <GridLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air"
            android:id="@+id/b1"
            android:background="@drawable/tile_air"
            android:textColor="#040404"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:text="Drought"
            android:id="@+id/b4"
            android:layout_column="0"
            android:background="@drawable/drought"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/b6"
            android:layout_alignStart="@+id/b6"
            android:layout_alignRight="@+id/b6"
            android:layout_alignEnd="@+id/b6"
            android:layout_row="1" />

        <Button
            android:text="Floods"
            android:id="@+id/b6"
            android:layout_column="1"
            android:background="@drawable/tile_flood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_below="@+id/b4"
            android:layout_alignLeft="@+id/b8"
            android:layout_alignStart="@+id/b8"
            android:layout_row="1"
            android:layout_marginLeft="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEAT"
            android:id="@+id/b8"
            android:background="@drawable/tile_heat"
            android:textSize="20dp"
            android:onClick="showme5"
            android:layout_below="@+id/b6"
            android:layout_alignLeft="@+id/b2"
            android:layout_alignStart="@+id/b2"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HURRICANE"
            android:id="@+id/b2"
            android:background="@drawable/tile_hurricane"
            android:layout_alignTop="@+id/b7"
            android:layout_toRightOf="@+id/b7"
            android:layout_toEndOf="@+id/b7"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIGHTNING"
            android:id="@+id/b7"
            android:background="@drawable/tile_lightning"
            android:layout_below="@+id/b5"
            android:layout_alignLeft="@+id/b3"
            android:layout_alignStart="@+id/b3"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beach "
        android:id="@+id/b3"
        android:background="@drawable/beach_hazard"
        android:textSize="20dp"
        android:layout_above="@+id/b5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="3"
        android:layout_column="1"
            android:layout_marginLeft="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fog"
            android:id="@+id/b5"
            android:background="@drawable/fog_icon"
            android:textSize="20dp"
            android:layout_alignTop="@+id/b8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="40dp" />

    </GridLayout>

</RelativeLayout>
